        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{info.title}"
            android:textColor="?attr/colorOnPrimary"
            tools:text="这是什么?" />
    </LinearLayout>
</layout>